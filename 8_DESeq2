#Generate plots able to download to computer
plotMa(res)

#Significantly downregulated genes in drcsa so sorted by greatest log2foldchange
resSig <- res[ which(res$padj < 1 ), ]
> head( resSig[ order( resSig$log2FoldChange ), ] )
